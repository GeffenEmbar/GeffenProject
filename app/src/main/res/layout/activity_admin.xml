<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <!-- 50% opacity guitar image -->
        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/guitar"
            android:scaleType="centerCrop"
            android:alpha="0.5" />

        <!-- dark gradient overlay -->
        <ImageView
            android:id="@+id/gradientOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient_overlay"
            android:scaleType="fitXY" />

        <!-- Glass morphism UI container -->
        <LinearLayout
            android:id="@+id/glassCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/glass_card"
            android:padding="20dp"
            android:layout_gravity="center">

            <!-- Glowing Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Page"
                android:textSize="36sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"
                android:shadowColor="#B0FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="14" />

            <!-- Space -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="24dp" />

            <!-- Buttons (plain Button elements) -->
            <Button
                android:id="@+id/challengeBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add challenges"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_background"
                android:textColor="#222222"
                android:elevation="8dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="2"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_background"
                android:textColor="#222222"
                android:elevation="8dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="3"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_background"
                android:textColor="#222222"
                android:elevation="8dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="4"
                android:textSize="20sp"
                android:background="@drawable/button_background"
                android:textColor="#222222"
                android:elevation="8dp" />

        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>