<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notes_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:background="@color/black"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Add notes questions"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            >

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose instrument:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            >

        </TextView>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/white"
            android:background="@color/white"
            android:entries="@array/instrument"
            android:id="@+id/spInstrument"
            android:layout_marginBottom="5dp"
            >
        </Spinner>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose note:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            >

        </TextView>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/white"
            android:background="@color/white"
            android:entries="@array/notes"
            android:id="@+id/correctAnswer"
            android:layout_marginBottom="5dp"
            >
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose 3 false answers:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            >

        </TextView>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/white"
            android:background="@color/white"
            android:entries="@array/notes"
            android:id="@+id/false1"
            android:layout_marginBottom="5dp"
            >
        </Spinner>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/white"
            android:background="@color/white"
            android:entries="@array/notes"
            android:id="@+id/false2"
            android:layout_marginBottom="5dp"
            >
        </Spinner>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/white"
            android:background="@color/white"
            android:entries="@array/notes"
            android:id="@+id/false3"
            android:layout_marginBottom="5dp"
            >
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose difficulty:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            >

        </TextView>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/white"
            android:background="@color/white"
            android:entries="@array/diff"
            android:id="@+id/diff"
            android:layout_marginBottom="5dp"
            >
        </Spinner>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Add"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@color/black"
            android:id="@+id/btnAdd"
            >

        </Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>