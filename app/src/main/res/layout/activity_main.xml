<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <!-- Background image with 50% opacity -->
        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/guitar2"
            android:scaleType="centerCrop"
            android:alpha="0.5" />

        <!-- Gradient overlay -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient_overlay"
            android:scaleType="fitXY" />

        <!-- Glass-morphism card -->
        <LinearLayout
            android:id="@+id/glassCard"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_margin="24dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/glass_card"
            android:padding="24dp"
            android:layout_gravity="center">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#B0FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="14"
                android:gravity="center"
                android:layout_margin="16dp"
                />

            <Button
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Register"
                android:textSize="40dp"
                android:textColor="#222222"
                android:elevation="8dp"
                android:id="@+id/register"
                android:layout_marginBottom="16dp"
                >

            </Button>


            <Button
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Log In"
                android:textColor="#222222"
                android:textSize="40dp"
                android:id="@+id/login"
                android:layout_marginBottom="16dp"
                >

            </Button>

            <Button
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Admin - temp"
                android:textColor="#222222"
                android:textSize="40dp"
                android:id="@+id/admin"
                android:layout_marginBottom="16dp"
                >

            </Button>
        </LinearLayout>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>